// eliminar.astro

---

    <script>
        // Accede a la variable inyectada por Astro
        const apiUrl = import.meta.env.PUBLIC_API_URL;
        window.API_URL = apiUrl;
        document.addEventListener('DOMContentLoaded', async () => {
            const urlParams = new URLSearchParams(window.location.search);
            const id = urlParams.get('id');
            const select = urlParams.get('select');
            
                try {
                    let endpoint = '';
                    let body = { id };
                    
                    // Configurar según el tipo
                    switch(select) {
                        case 'sala':
                            endpoint = `${window.API_URL}/api/rooms/${id}`;
                            break;
                        case 'lista':
                            endpoint = `${window.API_URL}/api/lists/${id}`;
                            break;
                        case 'palabra':
                            endpoint = `${window.API_URL}/api/words/${id}`;
                            body = { ...body, isactive: 0 }; // Soft delete
                            break;
                    }

                    const response = await fetch(endpoint, {
                        method: 'DELETE',
                        headers: {
                            'Content-Type': 'application/json',
                            'Authorization': `Bearer ${localStorage.getItem('token')}`
                        },
                        body: JSON.stringify(body)
                    });

                    if (response.ok) {
                        alert('Elemento eliminado correctamente');
                        window.location.href = '/dashboard';
                    } else {
                        const error = await response.json();
                        alert(`Error: ${error.message || 'No se pudo eliminar'}`);
                    }
                } catch (error) {
                    console.error('Error:', error);
                    alert('Error de conexión al intentar eliminar');
                }
        });
    </script>

